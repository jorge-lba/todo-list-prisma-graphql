{
  "name": "prisma-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jorge Alegretti <jorgeluiz.b.alegretti@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/shared/graphql/server.js",
    "dev": "ts-node-dev src/shared/graphql/server.ts",
    "migrate:init": "dotenv -e .env.test npx prisma migrate dev --name init",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "test": "dotenv -e .env.test jest -i",
    "test:all": "yarn docker:up && yarn migrate:init && yarn test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "apollo-server": "^3.3.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.2",
    "prisma": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "prisma": {
    "schema": "src/shared/database/prisma/schema.prisma"
  }
}
